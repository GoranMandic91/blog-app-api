{
  "name": "blog-app-api",
  "version": "0.0.1",
  "description": "Server for simple blog application",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "nodemon src/index.ts",
    "build": "tsc --project ./",
    "lint": "eslint --fix 'src/**/*.ts'",
    "test": "NODE_ENV=test jest --runInBand --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GoranMandic91/blog-app-api.git"
  },
  "author": "Goran Mandic",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GoranMandic91/blog-app-api/issues"
  },
  "homepage": "https://github.com/GoranMandic91/blog-app-api#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts",
      "!src/mocks/**",
      "!src/__test__/**",
      "!src/swagger/**/*",
      "!src/api/server.ts"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
